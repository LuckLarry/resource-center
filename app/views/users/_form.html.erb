<div class="col-md-11 col-xs-11 cont_right" style="margin-left:8.3333333333%;margin-top:20px;">
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <div class="row">
    <div class="field">
      <div class="col-md-4 field col-xs-12">
        <div class="col-md-4 col-xs-4 pad_line"><%= f.label :员工编号 %></div>
        <div class="col-md-8 col-xs-8"><%= f.text_field :employee_number %></div>
      </div>
    </div>
    <div class="col-md-4 field col-xs-12">
      <div class="col-md-4 col-xs-4 pad_line"><%= f.label :员工姓名 %></div>
      <div class="col-md-8 col-xs-8"><%= f.text_field :name %></div>
    </div>
    <div class="col-md-4 field col-xs-12">
      <div class="col-md-4 col-xs-4 pad_line"><%= f.label :手机号码 %></div>
      <div class="col-md-8 col-xs-8"><%= f.text_field :mobile %></div>
    </div>
    <div class="col-md-4 field col-xs-12">
      <div class="col-md-4 col-xs-4 pad_line"><%= f.label :密码 %></div>
      <div class="col-md-8 col-xs-8"><%= f.text_field :password %></div>
    </div>
    <div class="col-md-4 field col-xs-12">
      <div class="col-md-4 col-xs-4 pad_line"><%= f.label :是否是管理员 %></div>
      <div class="col-md-8 col-xs-8"><%= f.text_field :admin %></div>
    </div>
  </div>
  <div class="row" style="margin-top:20px;margin-left:20px;">
    <div class="actions">
      <%= f.submit "确定",class: 'btn btn-default' %>
      <%= link_to '返回', users_path,class: 'btn btn-default' %>
    </div>
  </div>
  <% end %>
</div>
