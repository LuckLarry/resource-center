<div class="col-md-11 col-xs-11 cont_right" style="margin-left:8.3333333333%;margin-top:20px;">
	<%= form_for(@user) do |f| %>
		<div class="row">
			<div class="col-md-4 field col-xs-12">
				<div class="col-md-4 col-xs-4 pad_line"><%= f.label :员工编号 %></div>
				<div class="col-md-8 col-xs-8"><%= f.text_field :employee_number,class: 'form-control',disabled: 'disabled'%></div>
			</div>
			<div class="col-md-4 field col-xs-12">
				<div class="col-md-4 col-xs-4 pad_line"><%= f.label :员工姓名 %></div>
				<div class="col-md-8 col-xs-8"><%= f.text_field :name,class: 'form-control',disabled: 'disabled'%></div>
			</div>
			<div class="col-md-4 field col-xs-12">
				<div class="col-md-4 col-xs-4 pad_line"><%= f.label :手机号码 %></div>
				<div class="col-md-8 col-xs-8"><%= f.text_field :mobile,class: 'form-control',disabled: 'disabled'%></div>
			</div>
			<div class="col-md-4 field col-xs-12">
				<div class="col-md-4 col-xs-4 pad_line"><%= f.label :加密密码 %></div>
				<div class="col-md-8 col-xs-8"><%= f.text_field :password_digest,class: 'form-control',disabled: 'disabled'%></div>
			</div>
			<div class="col-md-4 field col-xs-12">
				<div class="col-md-4 col-xs-4 pad_line"><%= f.label :是否是管理员 %></div>
				<div class="col-md-8 col-xs-8"><%= f.text_field :admin,class: 'form-control',disabled: 'disabled'%></div>
			</div>
		</div>
		<div class="row" style="margin-top:20px;margin-left:20px;">
	      <div class="actions">
	        <%= link_to '编辑', edit_user_path(@user),class: 'btn btn-default' %>
	        <%= link_to '返回', users_path,class: 'btn btn-default' %>
	      </div>
      	</div>
	<% end %>
</div>
